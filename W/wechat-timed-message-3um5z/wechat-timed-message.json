[
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "lzu-auto-covid-health-report-secrets",
      "labels": {
        "chart": "wechat-timed-message-1.1.5"
      }
    },
    "type": "Opaque",
    "stringData": {
      "title": "",
      "msg": "",
      "serverchansckey": "",
      "pptoken": "",
      "pptopic": "",
      "content": "",
      "image": "map[repository:hollowman6/send-message-to-wechat tag:latest]",
      "corpid": "",
      "corpsecret": "",
      "agentid": ""
    }
  },
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "lzu-auto-covid-health-report-configmap",
      "labels": {
        "chart": "wechat-timed-message-1.1.5"
      }
    },
    "data": {
      "delays": "30m"
    }
  },
  {
    "apiVersion": "batch/v1beta1",
    "kind": "CronJob",
    "metadata": {
      "name": "lzu-auto-covid-health-report",
      "labels": {
        "chart": "wechat-timed-message-1.1.5"
      },
      "annotations": {
        "description": "A chart for send timed message to Wechat. (向微信推送定时消息)"
      }
    },
    "spec": {
      "concurrencyPolicy": "Allow",
      "failedJobsHistoryLimit": 1,
      "jobTemplate": {
        "spec": {
          "template": {
            "metadata": {
              "labels": {
                "app": "lzu-auto-covid-health-report"
              }
            },
            "spec": {
              "containers": [
                {
                  "image": "hollowman6/send-message-to-wechat:latest",
                  "imagePullPolicy": "IfNotPresent",
                  "name": "lzu-auto-covid-health-report",
                  "env": [
                    {
                      "name": "DELAYS",
                      "valueFrom": {
                        "configMapKeyRef": {
                          "name": "lzu-auto-covid-health-report-configmap",
                          "key": "delays"
                        }
                      }
                    },
                    {
                      "name": "TITLE",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "title"
                        }
                      }
                    },
                    {
                      "name": "MSG",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "msg"
                        }
                      }
                    },
                    {
                      "name": "SERVERCHANSCKEY",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "serverchansckey"
                        }
                      }
                    },
                    {
                      "name": "PPTOKEN",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "pptoken"
                        }
                      }
                    },
                    {
                      "name": "PPTOPIC",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "pptopic"
                        }
                      }
                    },
                    {
                      "name": "CONTENT",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "content"
                        }
                      }
                    },
                    {
                      "name": "IMAGE",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "image"
                        }
                      }
                    },
                    {
                      "name": "CORPID",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "corpid"
                        }
                      }
                    },
                    {
                      "name": "CORPSECRET",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "corpsecret"
                        }
                      }
                    },
                    {
                      "name": "AGENTID",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "lzu-auto-covid-health-report-secrets",
                          "key": "agentid"
                        }
                      }
                    }
                  ],
                  "volumeMounts": [
                    {
                      "mountPath": "/cache",
                      "name": "report-delays-marking"
                    }
                  ]
                }
              ],
              "restartPolicy": "OnFailure",
              "volumes": [
                {
                  "name": "report-delays-marking",
                  "emptyDir": {}
                }
              ]
            }
          }
        }
      },
      "schedule": "0 2 21 * *",
      "successfulJobsHistoryLimit": 3
    }
  }
]