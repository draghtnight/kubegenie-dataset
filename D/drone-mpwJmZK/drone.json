[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "labels": {
        "helm.sh/chart": "drone-0.7.1",
        "app.kubernetes.io/name": "drone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "2.12.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "name": "release-name-drone"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "release-name-drone"
    },
    "type": "Opaque",
    "stringData": {
      "DRONE_SERVER_HOST": "your-hostname",
      "DRONE_SERVER_PROTO": "https"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
      "name": "release-name-drone"
    },
    "spec": {
      "accessModes": [
        "ReadWriteOnce"
      ],
      "resources": {
        "requests": {
          "storage": "5Gi"
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "labels": {
        "helm.sh/chart": "drone-0.7.1",
        "app.kubernetes.io/name": "drone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "2.12.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "name": "release-name-drone"
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": 80,
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "drone",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-drone",
      "labels": {
        "helm.sh/chart": "drone-0.7.1",
        "app.kubernetes.io/name": "drone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "2.12.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "drone",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "drone",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "drone",
              "envFrom": [
                {
                  "secretRef": {
                    "name": "release-name-drone"
                  }
                }
              ],
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "docker.io/drone/drone:2.12.0",
              "imagePullPolicy": "IfNotPresent",
              "livenessProbe": {
                "httpGet": {
                  "scheme": "HTTP",
                  "path": "/healthz",
                  "port": "http"
                }
              },
              "ports": [
                {
                  "name": "http",
                  "containerPort": 80,
                  "protocol": "TCP"
                },
                {
                  "name": "https",
                  "containerPort": 443,
                  "protocol": "TCP"
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "scheme": "HTTP",
                  "path": "/healthz",
                  "port": "http"
                }
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                }
              ]
            }
          ],
          "securityContext": {},
          "serviceAccountName": "release-name-drone",
          "volumes": [
            {
              "name": "data",
              "persistentVolumeClaim": {
                "claimName": "release-name-drone"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-drone-test-connection",
      "labels": {
        "helm.sh/chart": "drone-0.7.1",
        "app.kubernetes.io/name": "drone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "2.12.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-drone:80"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]