[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-datacube-wps",
      "labels": {
        "app.kubernetes.io/name": "datacube-wps",
        "helm.sh/chart": "datacube-wps-0.8.12",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": null
    },
    "spec": {
      "type": "NodePort",
      "ports": [
        {
          "port": 8000,
          "targetPort": "http",
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "datacube-wps",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-datacube-wps",
      "labels": {
        "app": "datacube-wps",
        "app.kubernetes.io/name": "datacube-wps",
        "helm.sh/chart": "datacube-wps-0.8.12",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "datacube-wps",
          "app.kubernetes.io/name": "datacube-wps",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "datacube-wps",
            "app.kubernetes.io/name": "datacube-wps",
            "app.kubernetes.io/instance": "release-name"
          },
          "annotations": null
        },
        "spec": {
          "dnsConfig": {
            "options": [
              {
                "name": "single-request-reopen"
              }
            ]
          },
          "initContainers": null,
          "containers": [
            {
              "name": "wps",
              "env": [
                {
                  "name": "DB_HOSTNAME",
                  "value": "localhost"
                },
                {
                  "name": "DB_PORT",
                  "value": "5432"
                },
                {
                  "name": "DB_DATABASE",
                  "value": "datacube"
                },
                {
                  "name": "DB_USERNAME",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "datacube",
                      "key": "postgres-username"
                    }
                  }
                },
                {
                  "name": "DB_PASSWORD",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "datacube",
                      "key": "postgres-password"
                    }
                  }
                },
                {
                  "name": "VIRTUAL_HOST",
                  "value": "localhost,127.0.0."
                },
                {
                  "name": "WPS_BASEURL",
                  "value": ""
                }
              ],
              "image": "docker.io/opendatacube/wps:latest",
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8000,
                  "protocol": "TCP"
                }
              ],
              "volumeMounts": [
                {
                  "mountPath": "/opt/outputs/",
                  "name": "output-volume"
                }
              ],
              "resources": null
            }
          ],
          "volumes": [
            {
              "name": "output-volume",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  }
]