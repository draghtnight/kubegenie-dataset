[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-platform-core",
      "labels": {
        "helm.sh/chart": "platform-core-0.1.12",
        "app.kubernetes.io/name": "platform-core",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1.16.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-platform-core",
      "labels": {
        "helm.sh/chart": "platform-core-0.1.12",
        "app.kubernetes.io/name": "platform-core",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1.16.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": 80,
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "platform-core",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-platform-core",
      "labels": {
        "helm.sh/chart": "platform-core-0.1.12",
        "app.kubernetes.io/name": "platform-core",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1.16.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "platform-core",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "platform-core",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-platform-core",
          "securityContext": {},
          "containers": [
            {
              "name": "platform-core",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "docker.dev.folio.org/platform-core:latest",
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 80,
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "limits": {
                  "memory": "1000Mi"
                },
                "requests": {
                  "memory": "400Mi"
                },
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ]
        }
      }
    }
  }
]