[
  {
    "apiVersion": "policy/v1",
    "kind": "PodDisruptionBudget",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "maxUnavailable": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "prysm",
          "app.kubernetes.io/instance": "release-name"
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "ClusterRole",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "rules": [
      {
        "apiGroups": [
          ""
        ],
        "resources": [
          "nodes"
        ],
        "verbs": [
          "get",
          "list",
          "watch"
        ]
      }
    ]
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "ClusterRoleBinding",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "ClusterRole",
      "name": "release-name-prysm"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "release-name-prysm",
        "namespace": "default"
      }
    ]
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "Role",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "rules": [
      {
        "apiGroups": [
          ""
        ],
        "resources": [
          "services"
        ],
        "verbs": [
          "get",
          "list",
          "watch"
        ]
      }
    ]
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "RoleBinding",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "Role",
      "name": "release-name-prysm"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "release-name-prysm"
      }
    ]
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "selector": {
        "app.kubernetes.io/name": "prysm",
        "app.kubernetes.io/instance": "release-name"
      },
      "sessionAffinity": "ClientIP",
      "sessionAffinityConfig": {
        "clientIP": {
          "timeoutSeconds": 86400
        }
      },
      "type": "ClusterIP",
      "ports": [
        {
          "name": "rpc",
          "port": 4000,
          "targetPort": "rpc"
        },
        {
          "name": "http",
          "port": 8080,
          "targetPort": "http"
        },
        {
          "name": "metrics",
          "port": 9090,
          "targetPort": "metrics"
        }
      ]
    }
  },
  {
    "kind": "StatefulSet",
    "apiVersion": "apps/v1",
    "metadata": {
      "name": "release-name-prysm",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "prysm",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "serviceName": "release-name-prysm",
      "replicas": 1,
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "prysm",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "securityContext": {
            "fsGroup": 1001,
            "runAsUser": 1001
          },
          "serviceAccountName": "release-name-prysm",
          "priorityClassName": "",
          "initContainers": [
            {
              "name": "init-chown",
              "image": "busybox:1.34",
              "imagePullPolicy": "IfNotPresent",
              "securityContext": {
                "runAsUser": 0
              },
              "command": [
                "chown",
                "-R",
                "1001:1001",
                "/data"
              ],
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                }
              ]
            },
            {
              "name": "cleanup-network-keys",
              "image": "busybox:1.34",
              "imagePullPolicy": "IfNotPresent",
              "securityContext": {
                "runAsUser": 0
              },
              "command": [
                "rm",
                "-f",
                "/data/network-keys"
              ],
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                }
              ]
            }
          ],
          "containers": [
            {
              "name": "release-name-prysm",
              "image": "gcr.io/prysmaticlabs/prysm/beacon-chain:v2.1.0",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "--datadir=/data",
                "--rpc-host=0.0.0.0",
                "--rpc-port=4000",
                "--p2p-host-ip=$(POD_IP)",
                "--p2p-tcp-port=13000",
                "--p2p-udp-port=13000",
                "--mainnet",
                "--accept-terms-of-use",
                "--p2p-max-peers=160",
                "--enable-peer-scorer",
                "--monitoring-port=9090",
                "--monitoring-host=0.0.0.0",
                "--grpc-gateway-host=0.0.0.0",
                "--grpc-gateway-port=8080"
              ],
              "env": [
                {
                  "name": "POD_IP",
                  "valueFrom": {
                    "fieldRef": {
                      "fieldPath": "status.podIP"
                    }
                  }
                }
              ],
              "ports": [
                {
                  "containerPort": 4000,
                  "name": "rpc",
                  "protocol": "TCP"
                },
                {
                  "containerPort": 8080,
                  "name": "http",
                  "protocol": "TCP"
                },
                {
                  "containerPort": 9090,
                  "name": "metrics",
                  "protocol": "TCP"
                }
              ],
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                }
              ]
            },
            {
              "name": "sidecar",
              "image": "europe-west4-docker.pkg.dev/stakewiselabs/public/ethnode-sidecar:v1.0.3",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "SERVER_BINDADDR",
                  "value": "0.0.0.0:3000"
                },
                {
                  "name": "CLIENT_PORT",
                  "value": "8080"
                }
              ],
              "ports": [
                {
                  "containerPort": 3000,
                  "name": "sidecar",
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "initialDelaySeconds": 900,
                "timeoutSeconds": 3,
                "periodSeconds": 30,
                "failureThreshold": 3,
                "successThreshold": 1,
                "httpGet": {
                  "path": "/eth2/liveness",
                  "port": "sidecar",
                  "scheme": "HTTP"
                }
              },
              "readinessProbe": {
                "initialDelaySeconds": 60,
                "timeoutSeconds": 3,
                "periodSeconds": 30,
                "failureThreshold": 30,
                "successThreshold": 2,
                "httpGet": {
                  "path": "/eth2/readiness",
                  "port": "sidecar",
                  "scheme": "HTTP"
                }
              }
            }
          ],
          "volumes": null
        }
      },
      "volumeClaimTemplates": [
        {
          "metadata": {
            "name": "data",
            "labels": {
              "app.kubernetes.io/name": "prysm",
              "helm.sh/chart": "prysm-1.2.2",
              "app.kubernetes.io/instance": "release-name",
              "app.kubernetes.io/managed-by": "Helm"
            }
          },
          "spec": {
            "accessModes": [
              "ReadWriteOnce"
            ],
            "storageClassName": null,
            "resources": {
              "requests": {
                "storage": "300Gi"
              }
            }
          }
        }
      ]
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-prysm-test-connection",
      "labels": {
        "app.kubernetes.io/name": "prysm",
        "helm.sh/chart": "prysm-1.2.2",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-prysm:4000"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]