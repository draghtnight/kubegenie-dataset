[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-camunda-bpm-platform",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "release-name-camunda-bpm-platform",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "stringData": {
      "DB_PASSWORD": "sa",
      "DB_USERNAME": "sa"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
      "name": "release-name-camunda-bpm-platform-database-h2",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "accessModes": [
        "ReadWriteOnce"
      ],
      "resources": {
        "requests": {
          "storage": "1G"
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-camunda-bpm-platform",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "name": "http",
          "protocol": "TCP",
          "targetPort": "http",
          "port": 8080
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-camunda-bpm-platform",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "camunda-bpm-platform",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "camunda-bpm-platform",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-camunda-bpm-platform",
          "securityContext": {
            "fsGroup": 1000
          },
          "containers": [
            {
              "name": "camunda-bpm-platform",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "camunda/camunda-bpm-platform:latest",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "DEBUG",
                  "value": "false"
                },
                {
                  "name": "JMX_PROMETHEUS",
                  "value": "false"
                },
                {
                  "name": "DB_DRIVER",
                  "value": "org.h2.Driver"
                },
                {
                  "name": "DB_URL",
                  "value": "jdbc:h2:./camunda-h2-dbs/process-engine"
                },
                {
                  "name": "DB_USERNAME",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "release-name-camunda-bpm-platform",
                      "key": "DB_USERNAME"
                    }
                  }
                },
                {
                  "name": "DB_PASSWORD",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "release-name-camunda-bpm-platform",
                      "key": "DB_PASSWORD"
                    }
                  }
                }
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8080,
                  "protocol": "TCP"
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "path": "/camunda/",
                  "port": "http"
                },
                "initialDelaySeconds": 120,
                "periodSeconds": 60
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "volumeMounts": [
                {
                  "name": "release-name-camunda-bpm-platform-database-h2",
                  "mountPath": "/camunda/camunda-h2-dbs"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "release-name-camunda-bpm-platform-database-h2",
              "persistentVolumeClaim": {
                "claimName": "release-name-camunda-bpm-platform-database-h2"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-camunda-bpm-platform-test-connection",
      "labels": {
        "helm.sh/chart": "camunda-bpm-platform-1.5.0",
        "app.kubernetes.io/name": "camunda-bpm-platform",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "latest",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "curl",
          "image": "curlimages/curl",
          "command": [
            "curl"
          ],
          "args": [
            "--retry-connrefused",
            "--connect-timeout",
            "5",
            "--max-time",
            "10",
            "--retry",
            "15",
            "--retry-max-time",
            "300",
            "release-name-camunda-bpm-platform:8080"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]