  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "release-name-ghost-export-to-s3",
      "labels": {
        "helm.sh/chart": "ghost-export-to-s3-0.21.0",
        "app.kubernetes.io/name": "ghost-export-to-s3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1.3.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "data": {
      "GHOST_URL": "https://my.ghost.blog/ghost",
      "GHOST_MAJOR_VERSION": "4",
      "S3_DESTINATION": "s3://path/to/my/s3-export.json"
    }
  },
  {
    "apiVersion": "batch/v1",
    "kind": "CronJob",
    "metadata": {
      "name": "release-name-ghost-export-to-s3",
      "labels": {
        "helm.sh/chart": "ghost-export-to-s3-0.21.0",
        "app.kubernetes.io/name": "ghost-export-to-s3",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "1.3.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "schedule": "@daily",
      "concurrencyPolicy": "Forbid",
      "jobTemplate": {
        "spec": {
          "ttlSecondsAfterFinished": 300,
          "backoffLimit": 1,
          "parallelism": 1,
          "activeDeadlineSeconds": 1800,
          "template": {
            "metadata": {
              "annotations": {
                "checksum/config": "c54ecf80b10cb534f126394afb482b4a9e2362d86422a87fd1fa8a0d7532e1ec",
                "checksum/secret": "7b01595ae85931751b9af621f3830723c92f0a5ef570724a990526e11da107bf"
              }
            },
            "spec": {
              "restartPolicy": "OnFailure",
              "serviceAccountName": "release-name-ghost-export-to-s3",
              "securityContext": {},
              "volumes": [
                {
                  "name": "export-data",
                  "emptyDir": {}
                }
              ],
              "initContainers": [
                {
                  "name": "download-glorious-json-from-ghost",
                  "image": "curlimages/curl:7.74.0",
                  "imagePullPolicy": "IfNotPresent",
                  "command": [
                    "/bin/sh",
                    "-c",
                    "curl --fail -sSL -c /tmp/ghost-cookie.txt \\\n  -d username='$(GHOST_AUTH_USERNAME)' \\\n  -d password='$(GHOST_AUTH_PASSWORD)' \\\n  -H 'Origin: k8s://$(POD_NAME)@$(POD_NAMESPACE)' \\\n  '$(GHOST_URL)'/api/v$(GHOST_MAJOR_VERSION)/admin/session/ && \\\ncurl --fail -sSL -b /tmp/ghost-cookie.txt \\\n  -H 'Origin: k8s://$(POD_NAME)@$(POD_NAMESPACE)' \\\n  -H 'Content-Type: application/json' \\\n  '$(GHOST_URL)'/api/v$(GHOST_MAJOR_VERSION)/admin/db/ \\\n  -o /data/ghost-export/ghost-export.json && \\\nrm -rf /tmp/ghost-cookie.txt\n"
                  ],
                  "env": [
                    {
                      "name": "POD_NAME",
                      "valueFrom": {
                        "fieldRef": {
                          "fieldPath": "metadata.name"
                        }
                      }
                    },
                    {
                      "name": "POD_NAMESPACE",
                      "valueFrom": {
                        "fieldRef": {
                          "fieldPath": "metadata.namespace"
                        }
                      }
                    },
                    {
                      "name": "GHOST_URL",
                      "valueFrom": {
                        "configMapKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "GHOST_URL"
                        }
                      }
                    },
                    {
                      "name": "GHOST_MAJOR_VERSION",
                      "valueFrom": {
                        "configMapKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "GHOST_MAJOR_VERSION"
                        }
                      }
                    },
                    {
                      "name": "GHOST_AUTH_USERNAME",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "GHOST_AUTH_USERNAME"
                        }
                      }
                    },
                    {
                      "name": "GHOST_AUTH_PASSWORD",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "GHOST_AUTH_PASSWORD"
                        }
                      }
                    }
                  ],
                  "volumeMounts": [
                    {
                      "name": "export-data",
                      "mountPath": "/data/ghost-export"
                    }
                  ],
                  "resources": {}
                }
              ],
              "containers": [
                {
                  "name": "export-ghost-json-to-s3",
                  "image": "amazon/aws-cli:2.4.9",
                  "imagePullPolicy": "IfNotPresent",
                  "args": [
                    "s3",
                    "cp",
                    "/data/to-export/ghost-export.json",
                    "$(S3_DESTINATION)"
                  ],
                  "env": [
                    {
                      "name": "AWS_ACCESS_KEY_ID",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "AWS_ACCESS_KEY_ID"
                        }
                      }
                    },
                    {
                      "name": "AWS_SECRET_ACCESS_KEY",
                      "valueFrom": {
                        "secretKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "AWS_SECRET_ACCESS_KEY"
                        }
                      }
                    },
                    {
                      "name": "S3_DESTINATION",
                      "valueFrom": {
                        "configMapKeyRef": {
                          "name": "release-name-ghost-export-to-s3",
                          "key": "S3_DESTINATION"
                        }
                      }
                    }
                  ],
                  "volumeMounts": [
                    {
                      "name": "export-data",
                      "mountPath": "/data/to-export"
                    }
                  ],
                  "resources": {}
                }
              ]
            }
          }
        }
      }
    }
  },
  {
    "apiVersion": "v1",
