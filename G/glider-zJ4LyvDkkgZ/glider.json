[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-glider",
      "labels": {
        "helm.sh/chart": "glider-0.1.4",
        "app.kubernetes.io/name": "glider",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.16.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "release-name-glider-config"
    },
    "data": {
      "glider.conf": "verbose=True\nlisten=http://:8443\n"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-glider",
      "labels": {
        "helm.sh/chart": "glider-0.1.4",
        "app.kubernetes.io/name": "glider",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.16.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 8443,
          "targetPort": 8443,
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "glider",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-glider",
      "labels": {
        "helm.sh/chart": "glider-0.1.4",
        "app.kubernetes.io/name": "glider",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "v0.16.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "glider",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "glider",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-glider",
          "securityContext": {},
          "volumes": [
            {
              "name": "config-volume",
              "configMap": {
                "name": "release-name-glider-config",
                "items": [
                  {
                    "key": "glider.conf",
                    "path": "glider.conf"
                  }
                ]
              }
            }
          ],
          "containers": [
            {
              "name": "glider",
              "volumeMounts": [
                {
                  "name": "config-volume",
                  "mountPath": "/etc/glider"
                }
              ],
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "nadoo/glider:v0.16.2",
              "imagePullPolicy": "IfNotPresent",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8443,
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "command": [
                "/app/glider"
              ],
              "args": [
                "-config",
                "/etc/glider/glider.conf"
              ]
            }
          ]
        }
      }
    }
  }
]