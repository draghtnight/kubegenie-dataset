[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-emby",
      "labels": {
        "app.kubernetes.io/name": "emby",
        "helm.sh/chart": "emby-0.1.0",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": "emby-http",
          "protocol": "TCP",
          "name": "emby-http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "emby",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-emby",
      "labels": {
        "app.kubernetes.io/name": "emby",
        "helm.sh/chart": "emby-0.1.0",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "emby",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "emby",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "emby",
              "image": "emby/embyserver:3.6.0.81",
              "imagePullPolicy": "IfNotPresent",
              "volumeMounts": [
                {
                  "name": "emby-config",
                  "mountPath": "/config"
                },
                {
                  "name": "emby-tv",
                  "mountPath": "/mnt/tv"
                },
                {
                  "name": "emby-movies",
                  "mountPath": "/mnt/movies"
                },
                {
                  "name": "emby-music",
                  "mountPath": "/mnt/music"
                }
              ],
              "env": [
                {
                  "name": "UID",
                  "value": "1000"
                },
                {
                  "name": "GID",
                  "value": "1000"
                },
                {
                  "name": "GIDLIST",
                  "value": "1000"
                }
              ],
              "ports": [
                {
                  "name": "emby-http",
                  "containerPort": 8096,
                  "protocol": "TCP"
                },
                {
                  "name": "emby-https",
                  "containerPort": 8920,
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ],
          "volumes": [
            {
              "name": "emby-config",
              "emptyDir": {}
            },
            {
              "name": "emby-tv",
              "emptyDir": {}
            },
            {
              "name": "emby-movies",
              "emptyDir": {}
            },
            {
              "name": "emby-music",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-emby-test-connection",
      "labels": {
        "app.kubernetes.io/name": "emby",
        "helm.sh/chart": "emby-0.1.0",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test-success"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-emby:80"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]