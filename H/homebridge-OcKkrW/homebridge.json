[
  {
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
      "name": "homebridge-pvc"
    },
    "spec": {
      "accessModes": [
        "ReadWriteOnce"
      ],
      "resources": {
        "requests": {
          "storage": "5G"
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "homebridge-svc",
      "labels": {
        "helm.sh/chart": "homebridge-0.5",
        "app-name": "homebridge",
        "component": "home-bridge-manager",
        "hostNetwork": "true",
        "internal-service": "false",
        "managed-by": "chynten",
        "created-by": "chynten",
        "version": "2022-05-02-ubuntu"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "name": "http",
          "protocol": "TCP",
          "port": 8581,
          "targetPort": 8581
        }
      ],
      "selector": {
        "app-name": "homebridge"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "homebridge-deployment",
      "labels": {
        "helm.sh/chart": "homebridge-0.5",
        "app-name": "homebridge",
        "component": "home-bridge-manager",
        "hostNetwork": "true",
        "internal-service": "false",
        "managed-by": "chynten",
        "created-by": "chynten",
        "version": "2022-05-02-ubuntu"
      }
    },
    "spec": {
      "replicas": 1,
      "revisionHistoryLimit": null,
      "selector": {
        "matchLabels": {
          "app-name": "homebridge"
        }
      },
      "strategy": {
        "type": "Recreate"
      },
      "template": {
        "metadata": {
          "labels": {
            "app-name": "homebridge"
          }
        },
        "spec": {
          "restartPolicy": "Always",
          "hostNetwork": true,
          "containers": [
            {
              "name": "homebridge",
              "image": "oznu/homebridge:2021-12-19-ubuntu",
              "imagePullPolicy": "IfNotPresent",
              "securityContext": null,
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              },
              "env": [
                {
                  "name": "PUID",
                  "value": "1000"
                },
                {
                  "name": "PGID",
                  "value": "1000"
                },
                {
                  "name": "HOMEBRIDGE_CONFIG_UI",
                  "value": "1"
                },
                {
                  "name": "HOMEBRIDGE_CONFIG_UI_PORT",
                  "value": "8581"
                },
                {
                  "name": "TZ",
                  "value": "UTC"
                }
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8581,
                  "protocol": "TCP"
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 8581
                },
                "failureThreshold": 5,
                "periodSeconds": 10
              },
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 8581
                },
                "failureThreshold": 5,
                "periodSeconds": 10
              },
              "startupProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 8581
                },
                "failureThreshold": 30,
                "initialDelaySeconds": 5,
                "periodSeconds": 10
              },
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/homebridge",
                  "subPath": "homebridge"
                }
              ]
            }
          ],
          "securityContext": {},
          "volumes": [
            {
              "name": "data",
              "persistentVolumeClaim": {
                "claimName": "homebridge-pvc"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "networking.k8s.io/v1",
    "kind": "Ingress",
    "metadata": {
      "name": "homebridge-ingress",
      "labels": {
        "helm.sh/chart": "homebridge-0.5",
        "app-name": "homebridge",
        "component": "home-bridge-manager",
        "hostNetwork": "true",
        "internal-service": "false",
        "managed-by": "chynten",
        "created-by": "chynten",
        "version": "2022-05-02-ubuntu"
      },
      "annotations": {
        "cert-manager.io/cluster-issuer": "letsencrypt",
        "kubernetes.io/ingress.class": "nginx"
      }
    },
    "spec": {
      "tls": [
        {
          "hosts": [
            "homebridge.example.com"
          ],
          "secretName": "homebridge-letsencrypt-certificate"
        }
      ],
      "rules": [
        {
          "host": "homebridge.example.com",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "Prefix",
                "backend": {
                  "service": {
                    "name": "homebridge-svc",
                    "port": {
                      "number": 8581
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
]