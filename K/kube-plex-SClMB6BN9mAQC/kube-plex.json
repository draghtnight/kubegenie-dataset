[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-kube-plex"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
      "name": "release-name-kube-plex-config",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm",
        "component": "config"
      }
    },
    "spec": {
      "accessModes": [
        "ReadWriteOnce"
      ],
      "resources": {
        "requests": {
          "storage": "20Gi"
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
      "name": "release-name-kube-plex-data",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm",
        "component": "data"
      }
    },
    "spec": {
      "accessModes": [
        "ReadOnlyMany"
      ],
      "resources": {
        "requests": {
          "storage": "40Gi"
        }
      }
    }
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "Role",
    "metadata": {
      "name": "release-name-kube-plex",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "rules": [
      {
        "apiGroups": [
          ""
        ],
        "resources": [
          "pods",
          "pods/attach",
          "pods/exec",
          "pods/portforward",
          "pods/proxy"
        ],
        "verbs": [
          "create",
          "delete",
          "deletecollection",
          "get",
          "list",
          "patch",
          "update",
          "watch"
        ]
      }
    ]
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "RoleBinding",
    "metadata": {
      "name": "release-name-kube-plex",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "Role",
      "name": "release-name-kube-plex"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "release-name-kube-plex",
        "namespace": "default"
      }
    ]
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-kube-plex",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "name": "pms",
          "port": 32400,
          "protocol": "TCP",
          "targetPort": "pms"
        },
        {
          "name": "http",
          "port": 80,
          "targetPort": "pms"
        },
        {
          "name": "https",
          "port": 443,
          "targetPort": 32443
        }
      ],
      "selector": {
        "app": "kube-plex",
        "release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-kube-plex",
      "labels": {
        "app": "kube-plex",
        "chart": "kube-plex-0.2.3",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "strategy": {
        "type": "Recreate"
      },
      "selector": {
        "matchLabels": {
          "app": "kube-plex",
          "release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "kube-plex",
            "release": "release-name"
          }
        },
        "spec": {
          "hostNetwork": true,
          "serviceAccountName": "release-name-kube-plex",
          "hostname": "release-name-kube-plex",
          "initContainers": [
            {
              "name": "kube-plex-install",
              "image": "quay.io/munnerz/kube-plex:latest",
              "imagePullPolicy": "Always",
              "command": [
                "cp",
                "/kube-plex",
                "/shared/kube-plex"
              ],
              "volumeMounts": [
                {
                  "name": "shared",
                  "mountPath": "/shared"
                }
              ]
            }
          ],
          "containers": [
            {
              "name": "plex",
              "image": "plexinc/pms-docker:1.16.0.1226-7eb2c8f6f",
              "imagePullPolicy": "IfNotPresent",
              "lifecycle": {
                "postStart": {
                  "exec": {
                    "command": [
                      "bash",
                      "-c",
                      "#!/bin/bash\nset -e\nrm -f '/usr/lib/plexmediaserver/Plex Transcoder'\ncp /shared/kube-plex '/usr/lib/plexmediaserver/Plex Transcoder'\n"
                    ]
                  }
                }
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/identity",
                  "port": 32400
                },
                "initialDelaySeconds": 15,
                "timeoutSeconds": 5
              },
              "livenessProbe": {
                "httpGet": {
                  "path": "/identity",
                  "port": 32400
                },
                "initialDelaySeconds": 10,
                "timeoutSeconds": 10
              },
              "ports": [
                {
                  "name": "pms",
                  "containerPort": 32400
                },
                {
                  "name": "https",
                  "containerPort": 32443
                }
              ],
              "env": [
                {
                  "name": "TZ",
                  "value": "Europe/London"
                },
                {
                  "name": "PLEX_CLAIM",
                  "value": ""
                },
                {
                  "name": "PMS_INTERNAL_ADDRESS",
                  "value": "http://192.168.42.42:32400"
                },
                {
                  "name": "ALLOWED_NETWORKS",
                  "value": "192.168.42.0/24,172.16.42.0/24,10.42.0.0/16,127.0.0.0/8"
                },
                {
                  "name": "PMS_IMAGE",
                  "value": "plexinc/pms-docker:1.16.0.1226-7eb2c8f6f"
                },
                {
                  "name": "KUBE_NAMESPACE",
                  "valueFrom": {
                    "fieldRef": {
                      "fieldPath": "metadata.namespace"
                    }
                  }
                },
                {
                  "name": "TRANSCODE_PVC",
                  "value": "release-name-kube-plex-transcode"
                },
                {
                  "name": "DATA_PVC",
                  "value": "release-name-kube-plex-data"
                },
                {
                  "name": "CONFIG_PVC",
                  "value": "release-name-kube-plex-config"
                }
              ],
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                },
                {
                  "name": "config",
                  "mountPath": "/config"
                },
                {
                  "name": "transcode",
                  "mountPath": "/transcode"
                },
                {
                  "name": "shared",
                  "mountPath": "/shared"
                }
              ],
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ],
          "nodeSelector": {
            "beta.kubernetes.io/arch": "amd64"
          },
          "volumes": [
            {
              "name": "data",
              "persistentVolumeClaim": {
                "claimName": "release-name-kube-plex-data"
              }
            },
            {
              "name": "config",
              "persistentVolumeClaim": {
                "claimName": "release-name-kube-plex-config"
              }
            },
            {
              "name": "transcode",
              "emptyDir": {}
            },
            {
              "name": "shared",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  }
]