[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-keptn-ortelius-service",
      "labels": {
        "helm.sh/chart": "keptn-ortelius-service-0.13.7",
        "app.kubernetes.io/name": "keptn-ortelius-service",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.13.7",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "ClusterRoleBinding",
    "metadata": {
      "name": "keptn-default-keptn-service-cluster-admin",
      "labels": {
        "helm.sh/chart": "keptn-ortelius-service-0.13.7",
        "app.kubernetes.io/name": "keptn-ortelius-service",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.13.7",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "release-name-keptn-ortelius-service",
        "namespace": "default"
      }
    ],
    "roleRef": {
      "kind": "ClusterRole",
      "name": "cluster-admin",
      "apiGroup": "rbac.authorization.k8s.io"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-keptn-ortelius-service",
      "labels": {
        "helm.sh/chart": "keptn-ortelius-service-0.13.7",
        "app.kubernetes.io/name": "keptn-ortelius-service",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.13.7",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 8080,
          "protocol": "TCP"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "keptn-ortelius-service",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-keptn-ortelius-service",
      "labels": {
        "helm.sh/chart": "keptn-ortelius-service-0.13.7",
        "app.kubernetes.io/name": "keptn-ortelius-service",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.13.7",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "keptn-ortelius-service",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "helm.sh/chart": "keptn-ortelius-service-0.13.7",
            "app.kubernetes.io/name": "keptn-ortelius-service",
            "app.kubernetes.io/instance": "release-name",
            "app.kubernetes.io/version": "0.13.7",
            "app.kubernetes.io/managed-by": "Helm"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-keptn-ortelius-service",
          "securityContext": {},
          "containers": [
            {
              "name": "keptn-service",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "bradmccoydev/keptn-ortelius-service:0.12.0",
              "imagePullPolicy": "IfNotPresent",
              "ports": [
                {
                  "containerPort": 80
                }
              ],
              "env": [
                {
                  "name": "CONFIGURATION_SERVICE",
                  "value": "http://localhost:8081/configuration-service"
                },
                {
                  "name": "env",
                  "value": "production"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "100m",
                  "memory": "128Mi"
                },
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            },
            {
              "name": "distributor",
              "image": "docker.io/keptn/distributor:0.14.1",
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "containerPort": 8080
                }
              ],
              "resources": {
                "requests": {
                  "memory": "32Mi",
                  "cpu": "50m"
                },
                "limits": {
                  "memory": "128Mi",
                  "cpu": "500m"
                }
              },
              "env": [
                {
                  "name": "PUBSUB_TOPIC",
                  "value": "sh.keptn.event.catalog.triggered"
                },
                {
                  "name": "PUBSUB_RECIPIENT",
                  "value": "127.0.0.1"
                },
                {
                  "name": "STAGE_FILTER",
                  "value": ""
                },
                {
                  "name": "PROJECT_FILTER",
                  "value": ""
                },
                {
                  "name": "SERVICE_FILTER",
                  "value": ""
                },
                {
                  "name": "VERSION",
                  "valueFrom": {
                    "fieldRef": {
                      "apiVersion": "v1",
                      "fieldPath": "metadata.labels['app.kubernetes.io/version']"
                    }
                  }
                },
                {
                  "name": "K8S_DEPLOYMENT_NAME",
                  "valueFrom": {
                    "fieldRef": {
                      "apiVersion": "v1",
                      "fieldPath": "metadata.labels['app.kubernetes.io/name']"
                    }
                  }
                },
                {
                  "name": "K8S_POD_NAME",
                  "valueFrom": {
                    "fieldRef": {
                      "apiVersion": "v1",
                      "fieldPath": "metadata.name"
                    }
                  }
                },
                {
                  "name": "K8S_NAMESPACE",
                  "valueFrom": {
                    "fieldRef": {
                      "apiVersion": "v1",
                      "fieldPath": "metadata.namespace"
                    }
                  }
                },
                {
                  "name": "K8S_NODE_NAME",
                  "valueFrom": {
                    "fieldRef": {
                      "apiVersion": "v1",
                      "fieldPath": "spec.nodeName"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
]