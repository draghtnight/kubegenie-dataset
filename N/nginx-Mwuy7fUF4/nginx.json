[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "labels": {
        "app": "nginx",
        "chart": "nginx-2.1.1",
        "heritage": "Helm",
        "release": "release-name"
      },
      "name": "release-name-nginx"
    },
    "spec": {
      "type": "ClusterIP",
      "clusterIP": "",
      "ports": [
        {
          "name": "http",
          "port": 80,
          "protocol": "TCP",
          "targetPort": "http"
        }
      ],
      "selector": {
        "app": "nginx",
        "release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-nginx",
      "labels": {
        "heritage": "Helm",
        "release": "release-name",
        "chart": "nginx-2.1.1",
        "app": "nginx"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "nginx",
          "release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "nginx",
            "release": "release-name",
            "type": "nginx-uwsgi",
            "chart": "nginx-2.1.1",
            "appVersion": "1.17-alpine"
          },
          "annotations": {
            "checksum/config": "01ba4719c80b6fe911b091a7c05124b64eeece964e09c058ef8f9805daca546b"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "nginx",
              "image": "nginx:1.17-alpine",
              "imagePullPolicy": "IfNotPresent",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 80,
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 80
                },
                "initialDelaySeconds": 3,
                "timeoutSeconds": 2,
                "failureThreshold": 2
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 80
                },
                "initialDelaySeconds": 3,
                "timeoutSeconds": 2,
                "failureThreshold": 2
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                },
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              }
            }
          ],
          "affinity": {
            "podAntiAffinity": {
              "requiredDuringSchedulingIgnoredDuringExecution": [
                {
                  "topologyKey": "kubernetes.io/hostname",
                  "labelSelector": {
                    "matchLabels": {
                      "app": "nginx",
                      "release": "release-name",
                      "type": "nginx-uwsgi",
                      "chart": "nginx-2.1.1",
                      "appVersion": "1.17-alpine"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-nginx-service-test",
      "labels": {
        "heritage": "Helm",
        "release": "release-name",
        "chart": "nginx-2.1.1",
        "app": "nginx"
      },
      "annotations": {
        "helm.sh/hook": "test-success"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "curl",
          "image": "radial/busyboxplus:curl",
          "command": [
            "curl"
          ],
          "args": [
            "release-name-nginx:80"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]