[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name",
      "labels": {
        "helm.sh/chart": "nodejs",
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "selector": {
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name"
      },
      "ports": [
        {
          "name": "http",
          "port": 8080,
          "protocol": "TCP",
          "targetPort": 8080
        }
      ]
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name",
      "labels": {
        "helm.sh/chart": "nodejs",
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "image.openshift.io/triggers": "[\n  {\n    \"from\":{\n      \"kind\":\"ImageStreamTag\",\n      \"name\":\"release-name:latest\"\n    },\n    \"fieldPath\":\"spec.template.spec.containers[0].image\"\n  }\n]"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "release-name",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "helm.sh/chart": "nodejs",
            "app.kubernetes.io/name": "release-name",
            "app.kubernetes.io/instance": "release-name",
            "app.kubernetes.io/managed-by": "Helm"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "web",
              "image": "release-name:latest",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 8080,
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "tcpSocket": {
                  "port": "http"
                }
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                }
              },
              "volumeMounts": null
            }
          ],
          "volumes": null
        }
      }
    }
  },
  {
    "apiVersion": "build.openshift.io/v1",
    "kind": "BuildConfig",
    "metadata": {
      "name": "release-name",
      "labels": {
        "helm.sh/chart": "nodejs",
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "source": {
        "type": "Git",
        "git": {
          "uri": "https://github.com/nodeshift-starters/nodejs-rest-http",
          "ref": "main"
        }
      },
      "strategy": {
        "type": "Source",
        "sourceStrategy": {
          "from": {
            "kind": "ImageStreamTag",
            "namespace": "openshift",
            "name": "nodejs:12"
          }
        }
      },
      "output": {
        "to": {
          "kind": "ImageStreamTag",
          "name": "release-name:latest"
        }
      },
      "triggers": [
        {
          "type": "ConfigChange"
        }
      ]
    }
  },
  {
    "apiVersion": "image.openshift.io/v1",
    "kind": "ImageStream",
    "metadata": {
      "name": "release-name",
      "labels": {
        "helm.sh/chart": "nodejs",
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "lookupPolicy": {
        "local": true
      }
    }
  },
  {
    "apiVersion": "route.openshift.io/v1",
    "kind": "Route",
    "metadata": {
      "name": "release-name",
      "labels": {
        "helm.sh/chart": "nodejs",
        "app.kubernetes.io/name": "release-name",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "to": {
        "kind": "Service",
        "name": "release-name"
      },
      "port": {
        "targetPort": "http"
      },
      "tls": {
        "termination": "edge",
        "insecureEdgeTerminationPolicy": "Redirect"
      }
    }
  }
]