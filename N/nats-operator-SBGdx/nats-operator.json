    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "ClusterRoleBinding",
    "metadata": {
      "name": "nats-io:nats-operator-crd-binding"
    },
    "roleRef": {
      "apiGroup": "rbac.authorization.k8s.io",
      "kind": "ClusterRole",
      "name": "nats-io-nats-operator-crd"
    },
    "subjects": [
      {
        "kind": "ServiceAccount",
        "name": "nats-operator",
        "namespace": "default"
      }
