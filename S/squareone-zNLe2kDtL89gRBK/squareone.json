[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-squareone",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "release-name-squareone",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "data": {
      "squareone.config.yaml": "siteName: \"Rubin Science Platform\"\nbaseUrl: https://chart-example.local\nsiteDescription: |\n  Access Rubin Observatory Legacy Survey of Space and Time data.\n"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-squareone",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": "http",
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-squareone",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "squareone",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "annotations": {
            "checksum/config": "b68f4072424270e6e745ce0be5144dbadfe02a2da098b87ec92ef638218ea515"
          },
          "labels": {
            "app.kubernetes.io/name": "squareone",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-squareone",
          "securityContext": {
            "runAsGroup": 1000,
            "runAsNonRoot": true,
            "runAsUser": 1000
          },
          "containers": [
            {
              "name": "squareone",
              "securityContext": {
                "capabilities": {
                  "drop": [
                    "all"
                  ]
                },
                "readOnlyRootFilesystem": true,
                "allowPrivilegeEscalation": false
              },
              "image": "lsstsqre/squareone:0.4.0",
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "name": "http",
                  "containerPort": 3000,
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                }
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                }
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                },
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "env": [
                {
                  "name": "SQUAREONE_CONFIG_PATH",
                  "value": "/etc/squareone/squareone.config.yaml"
                }
              ],
              "volumeMounts": [
                {
                  "name": "config",
                  "mountPath": "/etc/squareone"
                },
                {
                  "name": "next-image-cache",
                  "mountPath": "/app/.next/cache/images"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "config",
              "configMap": {
                "name": "release-name-squareone"
              }
            },
            {
              "name": "next-image-cache",
              "emptyDir": {}
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "networking.k8s.io/v1",
    "kind": "Ingress",
    "metadata": {
      "name": "release-name-squareone",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "kubernetes.io/ingress.class": "nginx"
      }
    },
    "spec": {
      "rules": [
        {
          "host": "chart-example.local",
          "http": {
            "paths": [
              {
                "path": "/",
                "pathType": "Prefix",
                "backend": {
                  "service": {
                    "name": "release-name-squareone",
                    "port": {
                      "number": 80
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-squareone-test-connection",
      "labels": {
        "helm.sh/chart": "squareone-0.4.1",
        "app.kubernetes.io/name": "squareone",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.4.0",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-squareone:80"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]