[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-showoff",
      "labels": {
        "app.kubernetes.io/name": "showoff",
        "helm.sh/chart": "showoff-0.3.4",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.20.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-showoff",
      "labels": {
        "app.kubernetes.io/name": "showoff",
        "helm.sh/chart": "showoff-0.3.4",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.20.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 80,
          "targetPort": "http",
          "protocol": "TCP",
          "name": "http"
        }
      ],
      "selector": {
        "app.kubernetes.io/name": "showoff",
        "app.kubernetes.io/instance": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-showoff",
      "labels": {
        "app.kubernetes.io/name": "showoff",
        "helm.sh/chart": "showoff-0.3.4",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.20.2",
        "app.kubernetes.io/managed-by": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app.kubernetes.io/name": "showoff",
          "app.kubernetes.io/instance": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app.kubernetes.io/name": "showoff",
            "app.kubernetes.io/instance": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-showoff",
          "securityContext": {},
          "initContainers": [
            {
              "name": "git-clone",
              "image": "binford2k/showoff:0.20.2",
              "args": [
                "git config --global url.https://github.com/.insteadOf git@github.com: && git clone --recurse-submodules -b $GIT_CLONE_REV $GIT_CLONE_REPO /mnt"
              ],
              "command": [
                "/bin/sh",
                "-c"
              ],
              "securityContext": {},
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "HOME",
                  "value": "/tmp"
                },
                {
                  "name": "GIT_CLONE_REPO",
                  "value": "https://...."
                },
                {
                  "name": "GIT_CLONE_REV",
                  "value": "master"
                }
              ],
              "volumeMounts": [
                {
                  "mountPath": "/mnt",
                  "name": "course"
                },
                {
                  "name": "netrc",
                  "mountPath": "/tmp/.netrc",
                  "subPath": ".netrc"
                }
              ]
            }
          ],
          "containers": [
            {
              "name": "showoff",
              "securityContext": {
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "image": "binford2k/showoff:0.20.2",
              "imagePullPolicy": "IfNotPresent",
              "command": [
                "showoff",
                "serve",
                "-f",
                "showoff.json"
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 9090,
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                }
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": "http"
                }
              },
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                },
                "allowPrivilegeEscalation": false,
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "readOnlyRootFilesystem": true
              },
              "volumeMounts": [
                {
                  "mountPath": "/var/cache/showoff/",
                  "name": "course"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "course",
              "emptyDir": {}
            },
            {
              "name": "netrc",
              "secret": {
                "secretName": "repo-secret"
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-showoff-test-connection",
      "labels": {
        "app.kubernetes.io/name": "showoff",
        "helm.sh/chart": "showoff-0.3.4",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "0.20.2",
        "app.kubernetes.io/managed-by": "Helm"
      },
      "annotations": {
        "helm.sh/hook": "test-success"
      }
    },
    "spec": {
      "containers": [
        {
          "name": "wget",
          "image": "busybox",
          "command": [
            "wget"
          ],
          "args": [
            "release-name-showoff:80"
          ]
        }
      ],
      "restartPolicy": "Never"
    }
  }
]