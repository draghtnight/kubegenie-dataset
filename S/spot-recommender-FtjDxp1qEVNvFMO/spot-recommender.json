[
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "release-name-spot-recommender",
      "labels": {
        "app": "release-name-spot-recommender",
        "chart": "spot-recommender-0.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "type": "Opaque",
    "data": {
      "awsAccessKeyId": null,
      "awsSecretAccessKey": null
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-spot-recommender",
      "labels": {
        "app": "release-name-spot-recommender",
        "chart": "spot-recommender-0.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "name": "http",
          "port": 9090,
          "targetPort": "http"
        }
      ],
      "selector": {
        "app": "release-name-spot-recommender"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name-spot-recommender",
      "labels": {
        "app": "release-name-spot-recommender",
        "chart": "spot-recommender-0.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "replicas": null,
      "template": {
        "metadata": {
          "labels": {
            "heritage": "Helm",
            "release": "release-name",
            "app": "release-name-spot-recommender",
            "component": "release-name-spot-recommender"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "recommender",
              "image": "banzaicloud/spot-recommender:0.0.1",
              "imagePullPolicy": "IfNotPresent",
              "env": [
                {
                  "name": "AWS_ACCESS_KEY_ID",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "release-name-spot-recommender",
                      "key": "awsAccessKeyId"
                    }
                  }
                },
                {
                  "name": "AWS_SECRET_ACCESS_KEY",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "release-name-spot-recommender",
                      "key": "awsSecretAccessKey"
                    }
                  }
                }
              ],
              "command": [
                "/bin/sh",
                "-ecx",
                "spot-recommender \\\n-listen-address=0.0.0.0:9090 \\\n-cache-instance-types=m4.xlarge,m5.xlarge,c5.xlarge \\\n-reevaluation-interval=1m0s \\\n-region=eu-west-1 \\\n-log-level=info\n"
              ],
              "ports": [
                {
                  "name": "http",
                  "containerPort": 9090
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/status",
                  "port": "http"
                },
                "initialDelaySeconds": 120,
                "timeoutSeconds": 5,
                "failureThreshold": 6
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/status",
                  "port": "http",
                  "httpHeaders": null
                },
                "initialDelaySeconds": 30,
                "timeoutSeconds": 3,
                "periodSeconds": 5
              },
              "resources": {
                "requests": {
                  "cpu": "120m",
                  "memory": "256Mi"
                },
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ]
        }
      }
    }
  }
]