[
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name",
      "labels": {
        "app": "bucket-cloner",
        "chart": "bucket-cloner-1.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "type": "ClusterIP",
      "ports": [
        {
          "port": 8581,
          "targetPort": "api",
          "protocol": "TCP",
          "name": "api"
        }
      ],
      "selector": {
        "app": "bucket-cloner",
        "release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "release-name",
      "labels": {
        "app": "bucket-cloner",
        "chart": "bucket-cloner-1.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "bucket-cloner",
          "release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "bucket-cloner",
            "release": "release-name"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "bucket-cloner",
              "image": "camptocamp/bucket-cloner:latest",
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "name": "api",
                  "containerPort": 8581,
                  "protocol": "TCP"
                }
              ],
              "env": null,
              "resources": {
                "seccompProfile": {
                  "type": "RuntimeDefault"
                }
              }
            }
          ]
        }
      }
    }
  },
  {
    "apiVersion": "monitoring.coreos.com/v1",
    "kind": "ServiceMonitor",
    "metadata": {
      "name": "release-name",
      "labels": {
        "app": "bucket-cloner",
        "chart": "bucket-cloner-1.0.4",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "selector": {
        "matchLabels": {
          "app": "bucket-cloner",
          "chart": "bucket-cloner-1.0.4",
          "release": "release-name",
          "heritage": "Helm"
        }
      },
      "endpoints": [
        {
          "port": "api"
        }
      ]
    }
  }
]