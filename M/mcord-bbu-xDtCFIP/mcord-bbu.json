[
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "l3-config"
    },
    "data": {
      "bootstrap.txt": "redis.hostname:accelleran\nredis.port:6379\ninstance.filter:enb_key\n"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "accelleran"
    },
    "spec": {
      "selector": {
        "app": "accelleran"
      },
      "clusterIP": "None",
      "ports": [
        {
          "name": "s1ap",
          "port": 31412,
          "protocol": "SCTP"
        }
      ]
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "accelleran-external"
    },
    "spec": {
      "selector": {
        "app": "accelleran"
      },
      "type": "NodePort",
      "ports": [
        {
          "port": 31412,
          "nodePort": 31412,
          "protocol": "SCTP"
        }
      ]
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "accelleran",
      "labels": {
        "app": "accelleran"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "accelleran"
        }
      },
      "serviceName": "accelleran",
      "template": {
        "metadata": {
          "labels": {
            "app": "accelleran"
          },
          "annotations": {
            "k8s.v1.cni.cncf.io/networks": "[ { \"name\": \"bbu-net\", \"interface\": \"vbbu-net\", \"namespace\": \"default\" } ]"
          }
        },
        "spec": {
          "nodeSelector": {
            "kubernetes.io/hostname": "node2"
          },
          "initContainers": [
            {
              "name": "init-iptables",
              "image": "ngick8stesting/c3po-mmeinit",
              "command": [
                "sh",
                "-c"
              ],
              "args": [
                "iptables -I OUTPUT -p icmp --icmp-type destination-unreachable -j DROP;"
              ],
              "securityContext": {
                "capabilities": {
                  "add": [
                    "NET_ADMIN"
                  ]
                }
              }
            }
          ],
          "terminationGracePeriodSeconds": 1,
          "containers": [
            {
              "name": "nats",
              "image": "node1:30500/accelleran/vran-nats:20190121",
              "imagePullPolicy": "IfNotPresent",
              "stdin": true,
              "tty": true,
              "env": [
                {
                  "name": "NATS_SERVICE_NAME",
                  "value": "nats-cluster"
                }
              ],
              "command": [
                "sh",
                "-c"
              ],
              "args": [
                "gnatsd -DV -c /etc/gnatsd.conf;"
              ],
              "resources": {
                "limits": {
                  "cpu": 3,
                  "memory": "1Gi",
                  "intel.com/sriov": "2"
                }
              },
              "securityContext": {
                "capabilities": {
                  "drop": {
                    "": "NET_RAW"
                  }
                },
                "allowPrivilegeEscalation": false,
                "readOnlyRootFilesystem": true
              }
            },
            {
              "name": "redis",
              "image": "node1:30500/accelleran/vran-redis:20190121",
              "imagePullPolicy": "IfNotPresent",
              "stdin": true,
              "tty": true,
              "command": [
                "sh",
                "-c"
              ],
              "args": [
                "(sleep 5; redis-cli -h localhost -p 6379 set NATS_SERVICE_URL \"nat://$(ip route get 116 | awk '{print $NF;exit}'):4222\";) & /usr/local/bin/redis-server"
              ],
              "resources": {
                "limits": {
                  "cpu": 3,
                  "memory": "1Gi",
                  "intel.com/sriov": "2"
                }
              },
              "securityContext": {
                "capabilities": {
                  "add": [
                    "NET_ADMIN",
                    "IPC_LOCK"
                  ]
                }
              }
            },
            {
              "name": "bbu",
              "image": "node1:30500/accelleran/vran-l3-fdd:onf-dns",
              "imagePullPolicy": "Always",
              "env": [
                {
                  "name": "MME_IP",
                  "value": "10.90.0.152"
                }
              ],
              "stdin": true,
              "tty": true,
              "command": [
                "sh",
                "-c"
              ],
              "args": [
                "sqlite3 /mnt/app/datastore.db \"update cellS1apConfig set enbSctpPort=31412;\"; sqlite3 /mnt/app/datastoreRemRw.db \"update FapServiceFapControlLteGateway set S1SigLinkPort=31412;\"; sqlite3 /mnt/app/datastore.db \"insert into enbSctpSocketInterface ('interfaceName') values ('eth0');\"; sqlite3 /mnt/app/datastore.db \"update logging set severity=7 where id=25;\"; sqlite3 /mnt/app/datastore.db \"update featureActivation set mmeSlicingEnabled=1;\"; sqlite3 /mnt/app/datastore.db \"update featureActivation set ranSlicingEnabled=1;\"; sqlite3 /mnt/app/datastore.db \"insert into pranServerAddress (pranServerIpAddress,pranServerPort) values ('10.90.0.132', 30410);\";\nsleep 10; /l3/l3start;"
              ],
              "volumeMounts": [
                {
                  "name": "bbu-config",
                  "mountPath": "/mnt/app/bootstrap.txt",
                  "subPath": "bootstrap.txt"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": 3,
                  "memory": "1Gi",
                  "intel.com/sriov": "2"
                }
              },
              "securityContext": {
                "capabilities": {
                  "add": [
                    "NET_ADMIN",
                    "IPC_LOCK",
                    "SYS_NICE"
                  ]
                }
              }
            }
          ],
          "volumes": [
            {
              "name": "bbu-config",
              "configMap": {
                "name": "l3-config",
                "items": [
                  {
                    "key": "bootstrap.txt",
                    "path": "bootstrap.txt"
                  }
                ]
              }
            }
          ]
        }
      }
    }
  },
  null
]