              "name": "mariadb-galera",
              "image": "docker.io/bitnami/mariadb-galera:10.6.8-debian-11-r3",
              "imagePullPolicy": "IfNotPresent",
              "securityContext": {
                "runAsNonRoot": true,
                "runAsUser": 11622,
