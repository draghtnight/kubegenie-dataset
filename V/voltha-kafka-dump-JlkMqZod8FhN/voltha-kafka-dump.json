[
  {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "voltha-kafka-dump",
      "labels": {
        "app": "voltha-kafka-dump",
        "chart": "voltha-kafka-dump",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "voltha-kafka-dump",
          "release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "voltha-kafka-dump",
            "release": "release-name"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "voltha-kafka-dump",
              "image": "opencord/voltha-kafka-dump:6.1.3",
              "imagePullPolicy": "Always",
              "command": [
                "/bin/bash",
                "-c",
                "sleep 86400"
              ]
            }
          ]
        }
      }
    }
  }
]