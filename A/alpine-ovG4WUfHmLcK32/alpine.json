[
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-my-alpine",
      "labels": {
        "app.kubernetes.io/managed-by": "Helm",
        "app.kubernetes.io/instance": "release-name",
        "app.kubernetes.io/version": "3.9",
        "helm.sh/chart": "alpine-0.1.2",
        "values": "initial-values"
      }
    },
    "spec": {
      "restartPolicy": "Never",
      "containers": [
        {
          "name": "waiter",
          "image": "alpine:3.9",
          "command": [
            "/bin/sleep",
            "9000"
          ]
        }
      ]
    }
  }
]