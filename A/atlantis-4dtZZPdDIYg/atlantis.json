[
  {
    "apiVersion": "v1",
    "kind": "ServiceAccount",
    "metadata": {
      "name": "release-name-atlantis",
      "labels": {
        "app": "atlantis",
        "chart": "atlantis-3.12.11",
        "release": "release-name",
        "heritage": "Helm"
      }
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Secret",
    "metadata": {
      "name": "release-name-atlantis-webhook",
      "labels": {
        "app": "atlantis",
        "chart": "atlantis-3.12.11",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "data": null
  },
  {
    "apiVersion": "v1",
    "kind": "ConfigMap",
    "metadata": {
      "name": "release-name-atlantis-tests"
    },
    "data": {
      "run.sh": "@test \"Atlantis UI is available\" {\n  ATLANTIS_URL=http://release-name-atlantis.default.svc.cluster.local:80\n  echo \"Trying Atlantis at: $ATLANTIS_URL\"\n  curl $ATLANTIS_URL\n}"
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "release-name-atlantis",
      "labels": {
        "app": "atlantis",
        "chart": "atlantis-3.12.11",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "type": "NodePort",
      "ports": [
        {
          "port": 80,
          "targetPort": 4141,
          "protocol": "TCP",
          "name": "atlantis"
        }
      ],
      "selector": {
        "app": "atlantis",
        "release": "release-name"
      }
    }
  },
  {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "release-name-atlantis",
      "labels": {
        "app": "atlantis",
        "chart": "atlantis-3.12.11",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "serviceName": "release-name-atlantis",
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "atlantis",
          "release": "release-name"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "atlantis",
            "release": "release-name"
          }
        },
        "spec": {
          "serviceAccountName": "release-name-atlantis",
          "automountServiceAccountToken": true,
          "securityContext": {
            "fsGroup": 1000,
            "runAsUser": 100
          },
          "volumes": null,
          "containers": [
            {
              "name": "atlantis",
              "image": "runatlantis/atlantis:v0.16.1",
              "imagePullPolicy": "IfNotPresent",
              "args": [
                "server"
              ],
              "ports": [
                {
                  "name": "atlantis",
                  "containerPort": 4141
                }
              ],
              "env": [
                {
                  "name": "ATLANTIS_DATA_DIR",
                  "value": "/atlantis-data"
                },
                {
                  "name": "ATLANTIS_REPO_WHITELIST",
                  "value": "<replace-me>"
                },
                {
                  "name": "ATLANTIS_PORT",
                  "value": "4141"
                },
                {
                  "name": "ATLANTIS_ATLANTIS_URL",
                  "value": "http://chart-example.local"
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/healthz",
                  "port": 4141,
                  "scheme": "HTTP"
                },
                "initialDelaySeconds": 5,
                "periodSeconds": 60,
                "timeoutSeconds": 5,
                "successThreshold": 1,
                "failureThreshold": 5
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/healthz",
                  "port": 4141,
                  "scheme": "HTTP"
                },
                "initialDelaySeconds": 5,
                "periodSeconds": 60,
                "timeoutSeconds": 5,
                "successThreshold": 1,
                "failureThreshold": 5
              },
              "volumeMounts": [
                {
                  "name": "atlantis-data",
                  "mountPath": "/atlantis-data"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": "100m",
                  "memory": "1Gi"
                },
                "requests": {
                  "cpu": "100m",
                  "memory": "1Gi"
                }
              }
            }
          ]
        }
      },
      "volumeClaimTemplates": [
        {
          "metadata": {
            "name": "atlantis-data"
          },
          "spec": {
            "accessModes": [
              "ReadWriteOnce"
            ],
            "resources": {
              "requests": {
                "storage": "5Gi"
              }
            }
          }
        }
      ]
    }
  },
  {
    "apiVersion": "networking.k8s.io/v1beta1",
    "kind": "Ingress",
    "metadata": {
      "name": "release-name-atlantis",
      "labels": {
        "app": "atlantis",
        "chart": "atlantis-3.12.11",
        "release": "release-name",
        "heritage": "Helm"
      }
    },
    "spec": {
      "rules": [
        {
          "host": "chart-example.local",
          "http": {
            "paths": [
              {
                "path": "/",
                "backend": {
                  "serviceName": "release-name-atlantis",
                  "servicePort": 80
                }
              }
            ]
          }
        }
      ]
    }
  },
  {
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "release-name-ui-test-p1i91",
      "annotations": {
        "helm.sh/hook": "test-success"
      }
    },
    "spec": {
      "initContainers": [
        {
          "name": "test-framework",
          "image": "dduportal/bats:0.4.0",
          "command": [
            "bash",
            "-c",
            "set -ex\n# copy bats to tools dir\ncp -R /usr/local/libexec/ /tools/bats/\n"
          ],
          "volumeMounts": [
            {
              "mountPath": "/tools",
              "name": "tools"
            }
          ]
        }
      ],
      "containers": [
        {
          "name": "release-name-ui-test",
          "image": "lachlanevenson/k8s-kubectl:v1.4.8-bash",
          "command": [
            "/tools/bats/bats",
            "-t",
            "/tests/run.sh"
          ],
          "volumeMounts": [
            {
              "mountPath": "/tests",
              "name": "tests",
              "readOnly": true
            },
            {
              "mountPath": "/tools",
              "name": "tools"
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "tests",
          "configMap": {
            "name": "release-name-atlantis-tests"
          }
        },
        {
          "name": "tools",
          "emptyDir": {}
        }
      ],
      "restartPolicy": "Never"
    }
  }
]